<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity"
    android:backgroundTint="#2e2e32">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="733dp"
        android:layout_height="50dp"
        android:background="#2e2e32"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#2e2e32"
            android:text="DEG"
            android:textColor="#989ea4"
            android:textSize="18sp" />

        <Button
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="530dp"
            android:layout_marginTop="5dp"
            android:background="#2e2e32"
            android:text="\u22EE"
            android:textColor="#989ea4"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/Input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#2e2e32"
        android:ems="10"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout3" />

    <TableLayout
        android:id="@+id/table1"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:background="#202125"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input"
        app:layout_constraintVertical_bias="0.0">



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="1"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="2"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="3"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="4"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="5"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="6"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="7"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="8"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="9"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="112dp">


            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="67dp"

                android:layout_weight="1"
                android:background="#202125"
                android:text="0"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="."
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />
            <Button
                android:id="@+id/buttonNothing3"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text=""
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />
        </TableRow>

    </TableLayout>
    <TableLayout
        android:id="@+id/table2"
        android:layout_marginLeft="1dp"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:background="#202125"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/table1"
        app:layout_constraintTop_toBottomOf="@+id/Input"

        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="\u00F7"
                android:textColor="#85adee"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonCE"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"

                android:text="\u2327"
                android:textColor="#85adee"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="\u2715"
                android:textColor="#85adee"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonNothing"
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text=""
                android:textColor="#85adee"
                android:textSize="10sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="-"
                android:textColor="#85adee"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonNothing2"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text=""
                android:textColor="#85adee"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="+"
                android:textColor="#85adee"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#202125"
                android:text="="
                android:textColor="#85adee"
                android:textSize="20sp" />
        </TableRow>


    </TableLayout>
    <TableLayout
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/table3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/table2"
        app:layout_constraintTop_toBottomOf="@+id/Input"
        app:layout_constraintVertical_bias="0.0"
        android:background="#144ea6">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="288dp">


            <Button
                android:id="@+id/buttonSqr"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#144ea6"
                android:text="^"

                android:textColor="@android:color/background_light"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonSqrt"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#144ea6"
                android:text="âˆš"

                android:textColor="@android:color/background_light"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonpercent"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#144ea6"
                android:text="%"

                android:textColor="@android:color/background_light"
                android:textSize="15sp" />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="288dp">


            <Button
                android:id="@+id/buttonSin"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#144ea6"
                android:text="sin"

                android:textColor="@android:color/background_light"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonCos"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#144ea6"
                android:text="cos"

                android:textColor="@android:color/background_light"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonTg"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#144ea6"
                android:text="tg"

                android:textColor="@android:color/background_light"
                android:textSize="15sp" />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="288dp">


            <Button
                android:id="@+id/buttonln"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#144ea6"
                android:text="ln"

                android:textColor="@android:color/background_light"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonlog"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#144ea6"
                android:text="log"

                android:textColor="@android:color/background_light"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonfactorial"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#144ea6"
                android:text="!"

                android:textColor="@android:color/background_light"
                android:textSize="15sp" />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonC"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"

                android:background="#144ea6"
                android:text="C"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />
            <Button
                android:id="@+id/buttonNothing6"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"

                android:background="#144ea6"
                android:text=""
                android:textColor="@android:color/background_light"
                android:textSize="15sp" />
            <Button
                android:id="@+id/buttonNothing5"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"

                android:background="#144ea6"
                android:text=""
                android:textColor="@android:color/background_light"
                android:textSize="15sp" />


        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>