<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/person"
        android:layout_height="40dp"
        android:layout_width="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_person"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/author2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="willsmith"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@id/person"
        app:layout_constraintLeft_toLeftOf="@id/person"
        app:layout_constraintTop_toTopOf="@id/person"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/more"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_more"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="10dp"
        app:layout_constraintTop_toTopOf="@id/person"
        app:layout_constraintBottom_toBottomOf="@id/person"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="9dp"/>
    <ImageView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@id/person"
        android:src="@drawable/ic_placeholder"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/like"
        android:src="@drawable/ic_like"
        app:layout_constraintTop_toBottomOf="@id/placeholder"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/comment"
        android:src="@drawable/comment"
        android:padding="3dp"
        app:layout_constraintLeft_toRightOf="@id/like"
        app:layout_constraintTop_toBottomOf="@id/placeholder"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/message"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:padding="3dp"
        android:scaleType="center"
        android:src="@drawable/ic_airplane"
        app:layout_constraintLeft_toRightOf="@id/comment"
        app:layout_constraintTop_toBottomOf="@id/placeholder" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/zakladki"
        android:src="@drawable/ic_zakladki"
        app:layout_constraintLeft_toRightOf="@id/message"
        app:layout_constraintTop_toBottomOf="@id/placeholder"
        android:layout_marginLeft="250dp"/>
    <TextView
        android:id="@+id/likesnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="12,174 likes"
        app:layout_constraintTop_toBottomOf="@id/like"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="willsmith"
        app:layout_constraintTop_toBottomOf="@id/likesnum"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey guys how are you going"
        app:layout_constraintTop_toBottomOf="@id/likesnum"
        app:layout_constraintLeft_toRightOf="@id/author"
        android:layout_marginLeft="10dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/viewcomments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View all comments"
        app:layout_constraintTop_toBottomOf="@id/author"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:textColor="#b2b2b2"/>

</androidx.constraintlayout.widget.ConstraintLayout>